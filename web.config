<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <!-- IIS URL Rewrite to forward to Node.js -->
    <rewrite>
      <rules>
        <rule name="ReverseProxyInboundRule1" stopProcessing="true">
          <match url="(.*)" />
          <action type="Rewrite" url="http://localhost:8081{REQUEST_URI}" logRewrittenUrl="true" />
        </rule>
      </rules>
    </rewrite>

    <!-- iisnode configuration -->
    <iisnode>
      <env name="NODE_ENV" value="production" />
      <env name="PORT" value="8081" />
    </iisnode>

    <!-- Logs directory -->
    <logging>
      <centralLogFileDirectory>%LOGFILES%\nodejs</centralLogFileDirectory>
    </logging>

    <!-- Security headers -->
    <httpProtocol>
      <customHeaders>
        <add name="X-UA-Compatible" content="IE=Edge" />
      </customHeaders>
    </httpProtocol>

    <!-- Compression -->
    <urlCompression doStaticCompression="true" doDynamicCompression="true" />

    <!-- Static file caching -->
    <staticContent>
      <clientCache cacheControlMode="UseMaxAge" cacheControlMaxAge="30.00:00:00" />
    </staticContent>
  </system.webServer>
</configuration>
